<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:searcher="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">
<LinearLayout
    android:id="@+id/search_result_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/search_result_item_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="9dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
                <TextView
                    android:id="@+id/search_result_item_detail"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:layout_alignParentRight="true"
                    android:text="详细"
                    android:layout_alignParentEnd="false"
                    android:enabled="true" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/search_result_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:padding="8dp"
                android:background="@color/search_card_bg">

                <ImageView
                    android:id="@+id/search_result_item_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="120px"
                    android:src="@drawable/com_jingdong_app_mall" />
                <LinearLayout
                    android:id="@+id/search_result_item_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true">

                    <cn.edu.pku.lcy.app.localsearch.ui.CustomTextView
                        android:id="@+id/search_result_item_title"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/search_result_item_icon"

                        android:layout_marginLeft="@dimen/abc_dropdownitem_text_padding_left"

                        android:text="hello,world"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/primary_material_light"
                        searcher:typeface="Roboto-Regular.ttf"
                        />

                    <cn.edu.pku.lcy.app.localsearch.ui.CustomTextView
                        android:id="@+id/search_result_item_content"
                        android:layout_toRightOf="@id/search_result_item_icon"
                        android:layout_marginLeft="@dimen/abc_dropdownitem_text_padding_left"

                        android:text="hello"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/subTextColor"
                        searcher:typeface="Roboto-Light.ttf"
                        />

                    <cn.edu.pku.lcy.app.localsearch.ui.CustomTextView
                        android:id="@+id/search_result_item_url"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="@dimen/abc_dropdownitem_text_padding_left"

                        android:text="1955"

                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        searcher:typeface="Roboto-Light.ttf"
                        android:textColor="@color/subTextColor"
                        />

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>



    </LinearLayout>
</LinearLayout>